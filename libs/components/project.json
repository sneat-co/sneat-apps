{
	"name": "components",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "library",
	"sourceRoot": "libs/components/src",
	"prefix": "sneat",
	"targets": {
		"build": {
			"executor": "@nx/angular:ng-packagr-lite",
			"outputs": ["{workspaceRoot}/dist/libs/components"],
			"options": {
				"project": "libs/components/ng-package.json"
			},
			"configurations": {
				"production": {
					"tsConfig": "libs/components/tsconfig.lib.prod.json"
				},
				"development": {
					"tsConfig": "libs/components/tsconfig.lib.json"
				}
			},
			"defaultConfiguration": "production"
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/libs/components"],
			"options": {
				"jestConfig": "libs/components/jest.config.ts",
				"passWithNoTests": true
			}
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"options": {
				"lintFilePatterns": [
					"libs/components/**/*.ts",
					"libs/components/**/*.html"
				]
			}
		}
	}
}
